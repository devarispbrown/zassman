<%= simple_form_for(@asset, html: { class: "form-horizontal"}) do |f| %>
  <%= f.error_notification %>
  <%= f.full_error :image_file_size, class: "alert alert-error" %>
  <%= f.full_error :image_content_type, class: "alert alert-error" %>

  <div class="form-inputs">
    <%= f.input :image, label: "Upload an image" %>
    <%= f.input :image_remote_url, label: "or enter a URL" %>
    <%= f.input :name %>
    <%= f.input :box_link %>
    <%= f.input :invision_link %>
    <%= f.input :css, as: :text, input_html: { rows: "10" } %>
    <%= f.input :tag_list, as: :text, label: "Tags (separated by commas)", input_html: { rows: "3" } %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, class: "btn btn-primary" %>
  </div>
<% end %>
