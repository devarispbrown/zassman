<div class="row">
  <div class="span6 offset3">
    <div class="well">

      <p id="notice"><%= notice %></p>
      <%= image_tag @asset.image %>
      <p>
        <b>Box link:</b>
        <%= @asset.box_link %>
      </p>

      <p>
        <b>Invision link:</b>
        <%= @asset.invision_link %>
      </p>

      <p>
        <b>Css:</b>
        <%= @asset.css %>
      </p>

      <p>
        <b>Name:</b>
        <%= @asset.name %>
      </p>

      <p>
        Tags: <%= raw @asset.tag_list.map { |t| link_to t, tag_path(t) }.join(', ') %>
      </p>

      <% if current_user == @asset.user %>
        <%= link_to 'Edit', edit_asset_path(@asset) %> |
      <% end %>
      <%= link_to 'Back', assets_path %>
    </div>
  </div>
</div>
