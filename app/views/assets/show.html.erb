<div class="row">
  <div class="span6 offset3">
    <div class="well">

      <p id="notice"><%= notice %></p>
      <%= image_tag @asset.image %>
      <p>
        <b>Box link:</b>
        <%= @asset.box_link %>
      </p>

      <p>
        <b>Invision link:</b>
        <%= @asset.invision_link %>
      </p>

      <p>
        <b>Css:</b>
        <%= @asset.css %>
      </p>

      <p>
        <b>Name:</b>
        <%= @asset.name %>
      </p>

      <p>
        Tags: <%= raw @asset.tag_list.map { |t| link_to t, tag_path(t) }.join(', ') %>
      </p>

      <% if current_user == @asset.user %>
        <%= link_to 'Edit', edit_asset_path(@asset) %> |
      <% end %>
      <%= link_to 'Back', assets_path %>
    </div>
  </div>
</div>

<div class="row">
  <div class="span6 offset3">
    <div class="comments">
      <% @asset.root_comments.each do |comment|%>
        <div class="comment">
          <h3><%= link_to comment.user.name, comment.user %> said:</h3>
          <p><%= comment.body %></p>
          <small><%= comment.created_at.strftime("Posted on %m-%e-%y %H:%M") %></small>
        </div>
      <% end %>
    </div>
  </div>
</div>

<div class="row">
  <div class="span6 offset3">
    <div class="comment_form">
      <%= simple_form_for Comment.new, url: asset_comments_path(@asset) do |f| %>
        <%= f.input :body, label: "Comment", input_html: { rows: "3" } %>
        <%= f.submit %>
      <% end %>
    </div>
  </div>
</div>







