<div class="navbar navbar-inverse navbar-fixed-top">
  <div class="navbar-inner tk-museo-slab">
    <div class="container">
      <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </a>
      <%= link_to "Zassman", root_path, class: "brand tk-museo-slab" %>
      <%= form_tag search_assets_path, :method => :get, :class => "navbar-search pull-left" do %>
        <%= text_field_tag :q, params[:q], :class => 'search-query', :placeholder => "Search by asset name or tag" %>
      <% end %>
      <div class="nav-collapse">
        <ul class="nav pull-right">
          <% if user_signed_in? %>
            <li><%= link_to "Add Asset", new_asset_path %></li>
            <li><%= link_to "Activities", activities_path %></li>
            <li class="dropdown">
              <a class="dropdown-toggle" href="#" data-toggle="dropdown">Settings <strong class="caret"></strong></a>
              <ul class="dropdown-menu" style="padding: 15px; padding-bottom: 0px;">
                <li><%= link_to "Edit Profile", edit_user_registration_path %></li>
                <li><%= link_to "Logout", destroy_user_session_path, method: :delete %></li>
              </ul>
            </li>
          <% else %>
            <li><%= link_to "Sign Up", new_user_registration_path %></li>
            <li class="dropdown">
              <a class="dropdown-toggle" href="#" data-toggle="dropdown">Sign In <strong class="caret"></strong></a>
              <!-- <li><%= link_to "Sign In", new_user_session_path %></li> -->
              <div class="dropdown-menu" style="padding: 15px; padding-bottom: 0px;">
                <!-- Login form here -->
                <%= simple_form_for(resource, :as => resource_name, :url => session_path(resource_name), html: { class: 'form-group'}) do |f| %>
                    <%= f.input :email, label: "Email" %>
                    <%= f.input :password, label: "Password" %>
                    <%= f.input :remember_me, as: :boolean, label: "Remember Me" %>

                    <%= f.submit "Sign in", class: "btn btn-primary" %> or <%= link_to image_tag("google.png"), user_omniauth_authorize_path(:google_oauth2) %>
                  <% end %>
              </div>
            </li>
          <% end %>
        </ul>
      </div>
    </div>
  </div>
</div>

